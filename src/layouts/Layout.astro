---
interface Props {
	title: string;
}

const { title } = Astro.props;
const pathname = Astro.url.pathname;

// Helper to check if link is active
const isActive = (path: string) => {
    if (path === '/') return pathname === '/';
    return pathname.startsWith(path);
};
---

<!doctype html>
<html lang="en" class="bg-midnight-950 text-midnight-100 antialiased scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal Blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col items-center selection:bg-accent-blue selection:text-white">
        
        <nav class="w-full max-w-3xl px-6 py-8 flex justify-between items-center">
            <a href="/" class="text-lg font-semibold tracking-tight hover:text-white transition-colors">
                Sam Rhea
            </a>
            <div class="flex gap-6 text-sm font-medium">
                <a href="/" class={`transition-colors ${isActive('/') ? 'text-white' : 'text-midnight-400 hover:text-midnight-200'}`}>
                    Writing
                </a>
                <a href="/about" class={`transition-colors ${isActive('/about') ? 'text-white' : 'text-midnight-400 hover:text-midnight-200'}`}>
                    About
                </a>
            </div>
        </nav>

		<main class="w-full max-w-3xl px-6 py-12 flex-grow">
			<slot />
		</main>

        <footer class="w-full max-w-3xl px-6 py-16 mt-12 flex justify-center gap-8 border-t border-midnight-800/30">
            <a href="https://x.com/LakeAustinBlvd" target="_blank" rel="noopener noreferrer" class="text-midnight-400 hover:text-white transition-colors p-2">
